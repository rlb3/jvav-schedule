<form {{action "create_schedule" on="submit"}}>
  <div class="form-group">
    <label for="date">Date</label>
    {{bs-input value=model.date id="date" placeholder="Date"}}
  </div>

  <div class="form-group">
    <label for="audio">Audio</label>
    {{#x-select action="didMakeSelection" default="audio"}}
    <option></option>
    {{#each model.workers as |worker|}}
    {{#x-option value=worker.fullName}}{{worker.fullName}}{{/x-option}}
    {{/each}}
    {{/x-select}}

  </div>

  <div class="form-group">
    <label for="audio_off">Audio Off</label>
    {{#x-select action="didMakeSelection" default="audioOff"}}
    <option></option>
    {{#each model.workers as |worker|}}
    {{#x-option value=worker.fullName}}{{worker.fullName}}{{/x-option}}
    {{/each}}
    {{/x-select}}

  </div>


  <div class="form-group">
    <label for="video">Video</label>
    {{#x-select action="didMakeSelection" default="video"}}
    <option></option>
    {{#each model.workers as |worker|}}
    {{#x-option value=worker.fullName}}{{worker.fullName}}{{/x-option}}
    {{/each}}
    {{/x-select}}

  </div>

  <div class="form-group">
    <label for="video_off">Video Off</label>
    {{#x-select action="didMakeSelection" default="videoOff" id="video_off"}}
    <option></option>
    {{#each model.workers as |worker|}}
    {{#x-option value=worker.fullName}}{{worker.fullName}}{{/x-option}}
    {{/each}}
    {{/x-select}}

  </div>

  <div class="form-group">
    <label for="alternate">Alternate</label>
    {{#x-select action="didMakeSelection" default="alternate"}}
    <option></option>
    {{#each model.workers as |worker|}}
    {{#x-option value=worker.fullName}}{{worker.fullName}}{{/x-option}}
    {{/each}}
    {{/x-select}}
  </div>

  <div class="form-group">
    <label for="alternate_off">Alternate Off</label>
    {{#x-select action="didMakeSelection" default="alternateOff"}}
    <option></option>
    {{#each model.workers as |worker|}}
    {{#x-option value=worker.fullName}}{{worker.fullName}}{{/x-option}}
    {{/each}}
    {{/x-select}}
  </div>
  <button type="submit" class="btn btn-default btn-primary">Submit</button>
</form>
